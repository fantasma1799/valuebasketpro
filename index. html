    <div class="help">
      <strong>Cómo rellenar:</strong><br/>
      • <strong>Promedio a favor:</strong> puntos anotados de media (últimos 5–10 partidos).<br/>
      • <strong>Promedio en contra:</strong> puntos recibidos de media.<br/>
      • <strong>Condición:</strong> local/visitante según el partido (solo referencia visual).<br/>
      • <strong>Línea de puntos totales:</strong> la línea de la casa (ej: 224.5).<br/>
      • <strong>Cuota del OVER:</strong> cuota decimal del Over (ej: 1.85).<br/>
      El modelo es simple: te ayuda a ver tendencia y valor, no garantiza ganancias.
    </div>
  </div>

  <script>
    function format(num) {
      return Number(num).toFixed(1);
    }

    document.getElementById('btnCalcular').addEventListener('click', function () {
      const e1_pf = parseFloat(document.getElementById('e1_pf').value);
      const e1_pa = parseFloat(document.getElementById('e1_pa').value);
      const e2_pf = parseFloat(document.getElementById('e2_pf').value);
      const e2_pa = parseFloat(document.getElementById('e2_pa').value);
      const linea = parseFloat(document.getElementById('linea').value);
      const cuota = parseFloat(document.getElementById('cuota').value);

      if (
        isNaN(e1_pf) || isNaN(e1_pa) ||
        isNaN(e2_pf) || isNaN(e2_pa) ||
        isNaN(linea) || isNaN(cuota)
      ) {
        alert('Rellena todos los campos numéricos antes de calcular.');
        return;
      }

      // Modelo simple:
      const exp_e1 = (e1_pf + e2_pa) / 2;
      const exp_e2 = (e2_pf + e1_pa) / 2;

      const proyeccion = exp_e1 + exp_e2;
      const diferencia = proyeccion - linea; // positiva = tendencia al OVER

      // Recomendación según diferencia
      let recoTexto = '';
      let tagClass = '';
      if (diferencia >= 7) {
        recoTexto = 'OVER fuerte';
        tagClass = 'tag tag-strong-over';
      } else if (diferencia >= 3) {
        recoTexto = 'OVER ligero';
        tagClass = 'tag tag-strong-over';
      } else if (diferencia > -3 && diferencia < 3) {
        recoTexto = 'Línea bien puesta (mejor NO apostar)';
        tagClass = 'tag tag-neutral';
      } else if (diferencia <= -7) {
        recoTexto = 'UNDER fuerte';
        tagClass = 'tag tag-strong-under';
      } else {
        recoTexto = 'UNDER ligero';
        tagClass = 'tag tag-strong-under';
      }

      // Probabilidad modelo del OVER (aprox) según diferencia
      let prob_model = 0.5 + (diferencia / 20);
      prob_model = Math.max(0.05, Math.min(0.95, prob_model)); // entre 5% y 95%

      const prob_over = prob_model;
      const prob_under = 1 - prob_model;

      // Probabilidad implícita por cuota
      const prob_cuota = 1 / cuota;
      const edge = (prob_model - prob_cuota) * 100; // diferencia en %

      // Probabilidad de acertar la apuesta recomendada
      let probRecomendada;
      if (diferencia > 0) {
        // tendencia al OVER
        probRecomendada = prob_over;
      } else if (diferencia < 0) {
        // tendencia al UNDER
        probRecomendada = prob_under;
      } else {
        probRecomendada = 0.5;
      }

      // Nivel de seguridad según probRecomendada
      let seguridad;
      if (probRecomendada >= 0.65) {
        seguridad = 'Alta';
      } else if (probRecomendada >= 0.55) {
        seguridad = 'Media';
      } else {
        seguridad = 'Baja';
      }

      const resProyeccion = document.getElementById('resProyeccion');
      const resDiferencia = document.getElementById('resDiferencia');
      const resRecomendacion = document.getElementById('resRecomendacion');
      const resValor = document.getElementById('resValor');
      const resProbApuesta = document.getElementById('resProbApuesta');
      const resSeguridad = document.getElementById('resSeguridad');

      resProyeccion.textContent = format(proyeccion) + ' pts';
      resDiferencia.textContent =
        (diferencia >= 0 ? '+' : '') + format(diferencia) + ' pts';

      resRecomendacion.innerHTML = `<span class="${tagClass}">${recoTexto}</span>`;
      resValor.textContent = (edge >= 0 ? '+' : '') + edge.toFixed(1) + ' %';

      resProbApuesta.textContent = (probRecomendada * 100).toFixed(1) + ' %';
      resSeguridad.textContent = seguridad;

      document.getElementById('results').style.display = 'block';
    });
  </script>
</body>
