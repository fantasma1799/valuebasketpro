<body>
  <div class="app">
    <h1>ValueBasketPro</h1>
    <div class="subtitle">
      Probabilidad automática y stake recomendado según tu banca.
    </div>

    <div class="card">
      <div class="section-title">Datos de la apuesta</div>

      <label for="cuota">Cuota (decimal)</label>
      <input id="cuota" type="number" step="0.01" placeholder="Ej: 1.80" />

      <label for="bankroll">Bankroll disponible (soles)</label>
      <input id="bankroll" type="number" step="1" placeholder="Ej: 500" />

      <button onclick="calcular()">Calcular</button>

      <div id="results" class="results" style="display:none;">
        <div class="result-row">
          <div class="result-label">Probabilidad de ganar (según cuota)</div>
          <div id="probCasa" class="result-value"></div>
        </div>
        <div class="result-row">
          <div class="result-label">Nivel de seguridad</div>
          <div id="nivelSeguridad" class="result-value"></div>
        </div>
        <div class="result-row">
          <div class="result-label">Stake recomendado</div>
          <div id="stakePct" class="result-value"></div>
        </div>

        <div class="stake-highlight">
          Apostar: <span id="stakeRec"></span> soles
        </div>

        <div class="note">
          La probabilidad se calcula sólo con la cuota (1/cuota).<br />
          Apuestas con cuota baja tienen más probabilidad pero pagan menos;
          cuota alta = más riesgo. Usa siempre gestión de bank responsable.
        </div>
      </div>
    </div>
  </div>

  <script>
    function calcular() {
      const cuota = parseFloat(document.getElementById("cuota").value);
      const bankroll = parseFloat(document.getElementById("bankroll").value);

      if (!cuota || cuota <= 1 || !bankroll || bankroll <= 0) {
        alert("Revisa los datos: cuota > 1 y bankroll > 0.");
        return;
      }

      // Probabilidad implícita de la casa
      const probCasa = 1 / cuota;
      const probPct = probCasa * 100;

      // Reglas simples de seguridad y stake
      let nivelTexto = "";
      let badgeClass = "";
      let porcentajeStake = 0.01; // por defecto 1% del bank

      if (probPct >= 70) {
        nivelTexto = "Alta seguridad (favorito claro)";
        badgeClass = "badge-high";
        porcentajeStake = 0.03; // 3 % del bank
      } else if (probPct >= 55) {
        nivelTexto = "Seguridad media";
        badgeClass = "badge-medium";
        porcentajeStake = 0.02; // 2 %
      } else if (probPct >= 45) {
        nivelTexto = "Riesgo alto";
        badgeClass = "badge-low";
        porcentajeStake = 0.01; // 1 %
      } else {
        nivelTexto = "Fun bet / sorpresa";
        badgeClass = "badge-fun";
        porcentajeStake = 0.005; // 0.5 %
      }

      const stake = bankroll * porcentajeStake;

      document.getElementById("probCasa").textContent =
        probPct.toFixed(1) + " %";

      document.getElementById("stakePct").textContent =
        (porcentajeStake * 100).toFixed(1) + " % del bank";

      const nivelHtml =
        '<span class="badge ' + badgeClass + '">' + nivelTexto + "</span>";
      document.getElementById("nivelSeguridad").innerHTML = nivelHtml;

      document.getElementById("stakeRec").textContent = stake.toFixed(2);

      document.getElementById("results").style.display = "block";
    }
  </script>
